---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image }: Props = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[image]) throw new Error(`"${image}" does not exist in glob: "@/assets/*.jpg}"`);
---

<article class="bg-theme-obsidian shadow-theme flex w-80 flex-col gap-4 rounded-lg p-4">
  <h2>{title}</h2>
  <p>{description}</p>
  <Image
    src={images[image]()}
    alt={title}
    width={267}
    height={193}
    loading="eager"
    format="webp"
    class="mt-auto w-full rounded-lg"
  />
</article>
