---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  icon: string;
  accentColor: string;
  title: string;
  description: string;
  image: string;
}

const { icon, accentColor, title, description, image }: Props = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[image]) throw new Error(`"${image}" does not exist in glob: "@/assets/*.jpg}"`);
---

<article
  class="flex w-80 flex-col gap-4 rounded-xl bg-theme-obsidian p-6 shadow-theme"
  role="region"
  aria-labelledby="appcard-title"
>
  <div
    class:list={["flex size-13 items-center justify-center rounded-full text-xl", accentColor]}
    aria-hidden="true"
  >
    {icon}
  </div>
  <h2 id="appcard-title" class="text-xl leading-6 font-semibold">{title}</h2>
  <p class="w-5/6 leading-5 font-light text-theme-silver">{description}</p>
  <Image
    src={images[image]()}
    alt={title}
    loading="eager"
    width={266}
    height={192}
    sizes="100vw"
    decoding="async"
    fetchpriority="low"
    class="mt-auto h-auto w-full rounded-xl"
  />
</article>
