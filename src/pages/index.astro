---
import MainLayout from "@/layouts/MainLayout.astro";
import AppCard from "@/components/AppCard.astro";

const data = [
  {
    title: "Collect Feedback at Multiple Touchpoints",
    description: "Provide a comprehensive understanding of the customer experience.",
    image: "/src/assets/photo_2.png",
  },
  {
    title: "Ask Targeted and Specific Questions",
    description: "Avoid vague or open-ended questions that may not yield actionable insights.",
    image: "/src/assets/photo_1.png",
  },
  {
    title: "Prioritize and Respond to Feedback",
    description:
      "Communicate the changes or improvements you've made in response to their feedback.",
    image: "/src/assets/photo_3.png",
  },
];
---

<MainLayout
  title="devChallenges | Simple Feature Section"
  description="A devChallenges.io coding challenge."
>
  <section class="bg-theme-midnight relative h-screen">
    <img
      src="/Background_image.svg"
      alt=""
      aria-hidden="true"
      class="absolute size-full object-cover"
    />
    <h1>Quality feedbacks for your SaaS products</h1>
    <p>The blocks & components you need</p>
    <div class="flex flex-col gap-4">
      {
        data.map((item) => (
          <AppCard title={item.title} description={item.description} image={item.image} />
        ))
      }
    </div>
  </section>
</MainLayout>
